<Window x:Class="RobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RobotInterface"
        xmlns:oscillo="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:AsservDisplay="clr-namespace:WpfAsservissementDisplay;assembly=WpfAsservissementDisplay" 
        xmlns:map="clr-namespace:WpfWorldMap_NS;assembly=WpfWorldMap"
        Title="Robot Interface">
    <TabControl>
        <TabItem Header="main">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <!-- Colonne Oscillo/Position/Btn -->
                    <ColumnDefinition Width="1*"/>
                    <!-- Colonne Map/Asserv -->
                </Grid.ColumnDefinitions>

                <!-- Partie gauche -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <!-- Oscillo -->
                        <RowDefinition Height="Auto"/>
                        <!-- Position x/y -->
                        <RowDefinition Height="1*"/>
                        <!-- Boutons -->
                    </Grid.RowDefinitions>

                    <!-- Oscilloscope -->
                    <GroupBox Header="Map" Margin="5" Grid.Row="0">
                        <!-- Placeholder carte -->
                        <map:WpfWorldMap x:Name="worldMap" Grid.Row="0" Grid.Column="3"/>

                    </GroupBox>

                    <!-- Position x/y -->
                    <GroupBox Grid.Row="1" Header="Position" Margin="5">
                        <StackPanel>
                            <TextBox Name="LabelX" Text="X = cm" FontSize="25" HorizontalAlignment="Center"/>
                            <TextBox Name="LabelY" Text="Y = cm" FontSize="25" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Boutons -->
                    <GroupBox Grid.Row="2" Header="Commandes" Margin="5">
                        <UniformGrid Columns="3" Rows="2" Margin="10">
                            <Button x:Name="Consigne" Content="don't ask :)" Click="ConsigneButton_Click"/>
                            <Button x:Name="Reset" Content="Reset Consigne" Click="Reset_Click"/>
                            <Button x:Name="InitPID"  Content="Initialisation PID" Click="InitPID_Click"/>
                            <Button x:Name="Test1" Content="Test 1 / X = 1, Y = 1" Click="Test1_Click"/>
                            <Button x:Name="Test2" Content="Test 2 / X = 0, Y = 1" Click="Test2_Click"/>
                            <Button x:Name="Test3" Content="Test 3 / X = 1, Y = 0"  Click="Test3_Click"/>
                            
                            
                        </UniformGrid>
                    </GroupBox>
                </Grid>

                <!-- Partie droite -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- Map -->
                        <RowDefinition Height="*"/>
                        <!-- Table asserv -->
                    </Grid.RowDefinitions>

                    <!-- Carte -->

                    <GroupBox Header="Oscillo" Margin="5">
                        <oscillo:WpfOscilloscope x:Name="oscilloSpeed"/>
                    </GroupBox>

                    <!-- Asservissement -->
                    <GroupBox Grid.Row="1" Header="Asservissement table" Margin="5" Grid.RowSpan="2" Background="#202020">
                        <AsservDisplay:AsservissementRobot2RouesDisplayControl x:Name="asservDisplay"  Grid.RowSpan="2" Grid.Row="1"/>
                    </GroupBox>
                </Grid>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
